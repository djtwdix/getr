<!DOCTYPE html>
<html lang="en">
  <head>
  <%- include("partials/_head")  %>
  <title>GETr</title>
</head>

<body>
  <%- include("partials/_navbar")  %>
  <main class="main-container">
    <div id="login-background">
      <div id="login-card">
        <div class="logo">
          <div class="circle"></div>
          <img id="getr-logo" src="./images/logo.png">
        </div>
        <div class="info">
          <h1 id="login-title">Login to Getr</h1>
          <div class="credentials">
            <form id="login-form" method="POST" action="/login">
              <input id="login-email" type="email" name="email" placeholder="Email or username" required />
              <input id="login-password" type="password" name="password" placeholder="Password" required />
              <div class="login">
                <button type="submit">LOGIN</button>
              </div>
              <div class="loginSignUpSeparator">
                <span class="textInSeparator">or</span>
              </div>
            </form>
            <div class="signup">
              <form action="/register" action="GET">
                <button href="">SIGN UP</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  </body>
</html>
